<%@ Master Language="C#" AutoEventWireup="true" CodeFile="MasterPage.master.cs" Inherits="MasterPage" %>
<%@ Register Src="Controls/ToolTip.ascx" TagName="ToolTip" TagPrefix="uc" %>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head id="Head1" runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>基团网</title>
    <asp:ContentPlaceHolder ID="cphTitle" runat="server">
    </asp:ContentPlaceHolder>
    <link href="/public/index.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/public/slidetrans.js"></script>
    <script type="text/javascript" src="/public/jquery-1.4.2.min.js"></script>
    <script type="text/javascript">
        //判断浏览器是否为IE
        function isIE() {
            return (document.all && window.ActiveXObject && !window.opera) ? true : false;
        }

        //判断浏览器是否是ie
        var isFF = navigator.userAgent.indexOf("Firefox") > 0;

        //设为主页
        function HomePage() {
            if (isIE) {
                this.style.behavior = 'url(#default#homepage)'; this.setHomePage(this.document.location.href);
            }
            return false;
        }

        function SetTitleCss(id) {
            for (i = 1; i < 4; i++) {
                document.getElementById("title" + i).className = "noselect";
            }
            document.getElementById("title" + id).className = "select";
        }   
        
        $(document).ready(function() {
            $("#navGoods").hover(
                function() {
                    $("#tooltip").slideDown(200);
                },
                function() {
                    $("#tooltip").slideUp(200);
                }
            ); 
        }); 
    </script>

</head>
<body>
    <div class="bodyWrap">
        <div class="wrapper">
            <div class="header">
                <div class="top">
                    <div class="logo">
                        <a href="">
                            <img src="images/logo.gif" width="276" height="48" border="0" /></a>
                    </div>
                    <div class="nav">
                        <ul>
                            <li class="navIndex"><a href="index.aspx" id="title1" class="select"></a></li>
                            <li class="navGoods" id="navGoods">
                                <a href="Category.aspx" id="title2" class="noselect"></a>
                                <uc:ToolTip ID="toolTips" runat="server" />
                            </li>
                            <li class="navReg"><a href="Register.aspx" id="title3" class="noselect"></a></li>
                        </ul>
                    </div>
                    <div class="clear">
                    </div>
                </div>
                <div class="menuAndSearch">
                    <div class="menu">
                        <ul>
                            <li>
                                <img src="Images/icon_2.gif" height="18" border="0" />&nbsp;<a href="#" onclick="return HomePage.call(this);">设为首页</a></li>                                
                            <li>
                                <img src="Images/icon_3.gif" height="18" border="0" />&nbsp;<a href="Contact.aspx">联系我们</a></li>
                            <li>
                                <img src="Images/icon_1.gif" height="20" border="0" />&nbsp;<a href="AboutUs.aspx">关于我们</a></li>
                        </ul>
                    </div>
                    <div class="search">
                        <div class="search-form">
                            <form action="search.aspx" method="get">
                            <input name="keywords" id="keywords" type="text" onclick="if(this.value=='请输入关键词')this.value='';"
                                value="请输入关键词" />
                            <input class="button" id="searchBtn" type="submit" value="搜索" />
                            <span class="hot-tags"><a href="AdvancedSearch.aspx">高级搜索</a></span>
                            </form>
                        </div>
                    </div>
                    <div class="clear">
                    </div>
                </div>
                <div class="banner">
                    <%if (!string.IsNullOrEmpty(ShopInfo.Header))
                      { %>
                    <%=ShopInfo.Header %>
                    <%} %>
                </div>
            </div>
            <div class="mainBody">
                <asp:ContentPlaceHolder ID="cphContent" runat="server">
                </asp:ContentPlaceHolder>
            </div>
            <div class="ad-banner">
                <%if (!string.IsNullOrEmpty(ShopInfo.Footer))
                  { %>
                <%=ShopInfo.Footer %>
                <%} %>
            </div>
            <div class="footer">
                <div class="bottom-link">
                    <a href="AboutUs.aspx">关于我们</a> - <a href="copyright.aspx">版权声明</a> - <a href="Contact.aspx">
                        联系我们</a> - <a href="LinkList.aspx">友情链接</a> - <a href="/Admin/Login.aspx" target="_blank">
                            管理登录</a>
                </div>
                <div class="copyright">
                    <a href="http://www.thshcoop.com">广州市天河区沙河供销合作社</a> ICP证号：粤ICP备09198729号<br />
                    地址：广州市天河区龙口东路139号后座二至四楼 电话：020-87590122<br />
                    Copyright&copy; 2009 Anyweb Studio， All rights reserved。
                </div>
            </div>
        </div>
    </div>    
</body>
</html>
