<aw:UserControlBase x:Class="AnyWell.Uploader.FileUploader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:aw="clr-namespace:AnyWell.Uploader"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="fileUploaderGrid" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="32"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="13"></RowDefinition>
        </Grid.RowDefinitions>
        <HyperlinkButton x:Name="addFilesButton" Width="60" Height="13" Content="添加文件" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalContentAlignment="Center" Visibility="Visible"></HyperlinkButton>
        <ProgressBar x:Name="progressBar" Height="13" Minimum="0" Grid.Column="0" Grid.Row="0" Visibility="Collapsed" ></ProgressBar>
        <TextBlock x:Name="totalSizeTextBlock" Height="13" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" Visibility="Collapsed" />
        <HyperlinkButton x:Name="delFilesButton" Height="13" Content="删除" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalContentAlignment="Center" Visibility="Collapsed"></HyperlinkButton>
    </Grid>
</aw:UserControlBase>
